#!/bin/bash

ADMIN_USER=Student
ADMIN_USER_SMALL=stud

#make vms
#Game engine
ubuntu-vm-builder kvm lucid --hostname GameEngine --user $ADMIN_USER_SMALL --name=$ADMIN_USER --pass password -a i386 --install-mirror=http://127.0.0.1:3142/de.archive.ubuntu.com/ubuntu --mirror http://de.archive.ubuntu.com/ubuntu --components main,restricted,multiverse,universe  --domain=nets-x -d /home/vms/GameEngine --addpkg ssh vim cron --libvirt qemu:///system --bridge=br0 --bridge=br1 --bridge=extbr2

